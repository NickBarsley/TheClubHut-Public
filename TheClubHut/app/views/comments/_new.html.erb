<% remote_form_for(:comment, :url => blog_blogpost_comments_path) do |form| %> 

<fieldset> 
  <legend>New Comment</legend> 
  <%= form.text_area :body, :rows => 10, :cols => 40 %> 
  <%= submit_tag "Create" %> 
  <%= button_to_function "Cancel" do |page| 
        page.hide "new_comment_form_for_blogpost_#{@blogpost.id}" 
        page.show "add_comment_link_for_blogpost_#{@blogpost.id}" 
      end 
  %>  
</fieldset> 
<% end %>