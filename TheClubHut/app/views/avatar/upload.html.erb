<h2>Profile Photo</h2>

<% form_tag("upload", :multipart => true) do %>
<fieldset>
  <legend><%= @title %></legend> 
  
  <%= error_messages_for 'avatar' %>

  <% if @user.avatar.exists? %>
  <div class="form_row">
    <%= avatar_tag(@user) %>
    <BR />
    [ <%= link_to "Delete this Photo", { :action => "delete" }, :confirm => "Are you sure?" %> ]
    <BR /><BR />
  </div>
  <% end %>
  <div class="form_row">
    <label for="new_avatar">New Photo:</label>
    <%= file_field "avatar", "image" %>
  </div>

  <%= submit_tag "Upload Profile Photo", :class => "submit" %> 
</fieldset>
<% end %>