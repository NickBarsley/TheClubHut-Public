<% @membershiptypes = Membershiptype.find(:all, :conditions => ["club_id=?", session[:club_id]]) -%>
<tr><td align=right>News Title:</td><td><%= form.text_field :title, :class => "text", :size => 30 %></td>
<tr><td valign=top align=right>News Story:</td>
  <td width="80%">
    <%= fckeditor_textarea("blogpost", "body", :width => '100%', :height => '500px') %>
  </td>
<tr><td valign=top align=right>As well as displaying the news, also email your news story to:</td><td>
<% i = 1 -%>
<% @membershiptypes.each do |type| -%>
  <%= check_box_tag "blogpost[membershiptype_ids][]", type.id, 0 -%> <%= type.name_plural %><BR />
  <% i += 1 -%>
<% end -%>
</td>
