<h2>Edit Post</h2>
<%= javascript_include_tag "fckeditor/fckeditor" %>
<%= render :partial => "blogpost" %>

<% form_for(:blogpost, :url => blog_blogpost_path(:id => @blogpost), :html => { :method => :put }) do |form| %>
  <table align=center cellspacing=5>
  <%= render :partial => "form", :locals => { :form => form } %>
  <tr><td colspan=2 align=center><%= submit_tag "Create News Story", :class => "submit" %> </td></tr>
  </table>
<% end %>